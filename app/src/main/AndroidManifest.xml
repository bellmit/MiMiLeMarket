<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huadi.shoppingmall">

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name=".util.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/tubiao"
        android:label="米米乐商城"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Welcome">
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />"
            </intent-filter>
        </activity>

        <activity android:name=".activity.PurchaseSelectActivity"></activity>
        <activity android:name=".activity.OrderConfirm"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".activity.ProductActivity" />
        <activity android:name=".activity.ProductDetail"></activity>
        <activity android:name=".activity.Category"></activity>
        <activity android:name=".activity.AddressActivity"></activity>
        <activity android:name=".activity.Login"></activity>
        <activity android:name=".activity.CouponActivity"></activity>
        <activity android:name=".activity.OrderActivity"></activity>

        <activity android:name=".activity.RegisterActivity"></activity>
        <activity android:name=".activity.ProductCommentActivity"></activity>
        <activity android:name=".activity.AddAddressActivity"></activity>
        <activity android:name=".activity.ProductSelectActivity"></activity>
        <activity android:name=".activity.Pay"></activity>
        <activity android:name=".activity.SettingActivity"></activity>
        <activity android:name=".activity.LogisticsActivity"></activity>
        <activity android:name=".activity.PublishComment"></activity>
        <activity android:name=".activity.CheckBalance"></activity>

        <uses-permission android:name="android.permission.INTERNET" />
    </application>
</manifest>