<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/address_browse_title_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:background="@drawable/goback"
        />


    <TextView
        android:id="@+id/address_browse_title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址管理"
        android:textColor="#000000"
        android:textSize="26sp"/>

    <Button
        android:id="@+id/address_browse_title_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:text="@string/address_browse_title_add"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        />



    <ImageView
        android:id="@+id/address_browse_title_imageline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/colorline"
        android:layout_below="@id/address_browse_title_text"
        />





</RelativeLayout>