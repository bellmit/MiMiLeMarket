<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/order_confirm_from_shopcar_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/order_confirm_from_shopcar_item_brand_name"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="sdee旗舰店"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/order_confirm_from_shopcar_item_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/order_confirm_from_shopcar_item_title"
        android:background="#F5F5F5"
        >

        <ImageView
            android:id="@+id/order_confirm_from_shopcar_item_image"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_confirm_from_shopcar_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="四川 移动 手机充值10元 快充直充 24小时自动到账" />
            <TextView
                android:id="@+id/order_confirm_from_shopcar_item_colorSize"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色分类:010黑,尺码：160/80A/S"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/order_confirm_from_shopcar_item_top_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:paddingRight="1dp"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="￥19912.98" />

            <TextView
                android:id="@+id/order_confirm_from_shopcar_item_top_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:text="×1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/order_confirm_from_shopcar_item_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/order_confirm_from_shopcar_item_top"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:text="共1件商品， 合计 ￥9.98（含运费￥0.00）" />


    <View
        android:layout_below="@id/order_confirm_from_shopcar_item_middle"
        android:layout_marginTop="5dp"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_width="fill_parent">
    </View>


</RelativeLayout>