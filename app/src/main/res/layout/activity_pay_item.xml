<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="5dp" 	         
    >     
<!--      商品图片 -->
     <ImageView
         android:id="@+id/pay_item_image"
         android:layout_width="110dp"
         android:layout_height="110dp"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="4dp"
         android:src="@drawable/img20160721241" />
<!--      商品名称 -->
       <TextView
        android:id="@+id/pay_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/pay_item_image"
        android:textSize="16sp"
        android:text="四川 移动 手机充值10元 快充直充 24小时自动到账"  
         android:textColor="#000000"          
           />  

<!--             商品数量-->
         <TextView
        android:id="@+id/pay_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        
        android:layout_alignParentRight="true" 
        android:layout_marginRight="14dp"
        
        
        android:textSize="16sp"   
        android:layout_above="@+id/pay_confirm_line2"
        android:text="77" 
        android:textColor="#000000" 
            /> 
         <TextView
        android:id="@+id/pay_confirm_tab_goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        
        android:layout_toLeftOf="@id/pay_item_num"
        android:layout_marginRight="5dp"
        
        android:textSize="16sp"   
        android:layout_above="@id/pay_confirm_line2"
        android:text="数量:" 
        android:textColor="#000000" 
       
            /> 
<!--              商品价格 -->
         <TextView
        android:id="@+id/pay_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        
        android:layout_toLeftOf="@id/pay_confirm_tab_goods_num" 
        android:layout_marginRight="10dp"
        
        android:textSize="16sp"   
        android:layout_above="@id/pay_confirm_line2"
        android:text="122"
        android:textColor="#000000" 
        /> 
        <TextView
        android:id="@+id/pay_confirm_tab_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        
        android:layout_toLeftOf="@id/pay_item_price"
        android:layout_marginRight="5dp"
        
        android:textSize="16sp"   
        android:layout_above="@id/pay_confirm_line2"
        android:text="价格:" 
        android:textColor="#000000" 
            /> 
                
            <View
         android:id="@+id/pay_confirm_line2"
android:layout_width="match_parent"
android:layout_height="1dip"
android:layout_below="@id/pay_item_image"
android:layout_marginTop="5dp"
android:background="#696969" />  

    </RelativeLayout>
</RelativeLayout>
