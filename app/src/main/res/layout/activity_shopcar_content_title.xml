<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/shopCar_content_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/shopCar_content_title_text"
        android:textColor="#000000"
        android:textSize="20sp"
       />
    
    <Button
        android:id="@+id/shopCar_content_Button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:text="@string/shopCar_content_title_edit"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/shopCar_content_imageline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/colorline"
        android:layout_below="@id/shopCar_content_Button_edit"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>